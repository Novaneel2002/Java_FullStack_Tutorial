package Java8Features;
import java.util.*;
public class StringJoinerExample {
	
	public static void main(String[] args) {
		StringJoiner sj = new StringJoiner(" ");
		sj.add("Name1");
		sj.add("is");
		sj.add("Name2");
		System.out.println(sj.toString());
		StringJoiner sj2 = new StringJoiner(" , ","\"" ,"\"");
		sj2.add("Name1");
		sj2.add("is");
		sj2.add("Name2");
		System.out.println(sj2.toString());
		
		
		Optional<String> name = Optional.of("Java");
		Optional<String> name2 = Optional.empty();
		name.ifPresent(n->System.out.println("Name is :" + n));
		name2.ifPresent(n->System.out.println("Name is :" + n));
		
		
		
		double[] stockPrices = {123, 34, 234.45, 112.34, 231.11, 123.12};
		Arrays.parallelSort(stockPrices);
		System.out.println("Sorted Array : parallely : " + Arrays.toString(stockPrices));
		
	
	
	}
}
