package Java_Basics;
import java.util.*;
public class assignment2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int student[][] = new int[4][3];
		for(int i=0;i<4;i++) {
			for(int j=0;j<3;j++) {
				System.out.print("Enter the marks of Student " + (i+1) + ": ");
				student[i][j] = sc.nextInt();
			}
		}
		
		
//		for(int i=0;i<student.length;i++) {
//		for(int j=0;j<student[0].length;j++) {
//			System.out.print(student[i][j]+"\t");
//		}
//		System.out.println("");
//	}
		
		int perc[] = new int[4];
		int sum=0;
		for(int i=0;i<4;i++) {
			for(int j=0;j<3;j++) {
				sum += student[i][j];
			}
			perc[i] = sum/300; 
		}
		
		
		
		for(int i=0;i<4;i++) {
			System.out.println("Percentage of student " + (i+1) + ": "+ perc[i]);
			
		}
		
	}

}
