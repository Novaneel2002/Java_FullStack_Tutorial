package Java_Basics;
import java.util.*;
public class assignment2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Enter the no. of students: ");
		int n = sc.nextInt();
		
		int student[][] = new int[n][3];
		for(int i=0;i<n;i++) {
			System.out.print("Enter the marks of Student " + (i+1) + ": ");
			for(int j=0;j<3;j++) {
				student[i][j] = sc.nextInt();
			}
		}
		
		System.out.println("");
		
		for(int i=0;i<student.length;i++) {
			System.out.print("Marks of Student" + (i+1) + ": ");
			for(int j=0;j<student[0].length;j++) {
				System.out.print(student[i][j]+"\t");
			}
			System.out.println("");

		}
		
		double perc[] = new double[4];
		int sum=0;
		for(int i=0;i<student.length;i++) {
			for(int j=0;j<student[i].length;j++) {
				sum += student[i][j];
			}
			perc[i] = (sum*100)/300; 
			sum =0;
		}
		
		
		
		for(int i=0;i<student.length;i++) {
			System.out.println("Percentage of student " + (i+1) + ": "+ perc[i] +"%");
			
		}
		
	}

}
